<div class="tips_show jumbotron">
  <h1><%= @tip.name %></h1>
  <h3>by: <%= @tip.user.name %></h3>
</div>
<div class="container">
  <p><%= @tip.content %></p><br>
  <%= link_to "Edit Tip", edit_tip_path(@tip), class: "btn btn-info btn-small" %><br><br>
  <%= link_to 'Delete Tip', [@tip], method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-warning btn-small" %><br><br>
  <%= link_to "See all tips", tips_path, class: "btn btn-success btn-small" %>
</div>