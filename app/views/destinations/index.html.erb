<h1>Destinations</h1>

<%= button_to 'Add New Destination', new_destination_path, class: "btn btn-lg btn-primary" %>

  <% @destinations.each do |destination| %>
    <div>
      <%= destination.country %>
      <%= destination.name %>
      <%= destination.region %>
      
      <%= link_to 'Show Destination', destination_path(destination) %>  
  <% end %> 
    </div>
