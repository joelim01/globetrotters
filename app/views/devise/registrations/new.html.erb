<h1>Sign up</h1>


<div class="container signup_page">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :name %>
      <%= f.email_field :name, :class => "text_field" %>
    </div>

    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, :class => "text_field" %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "off", :class => "text_field" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "off", :class => "text_field" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", :class => "btn btn-lg btn-success" %>
    </div>
    <br>
    <br>
    <p>Already have an account?<br>  
    <%= link_to 'Login', user_session_path, class: "btn btn-lg btn-info", id: "login" %></p>
    <br>
    <p>Click here to login with your Facebook account.<br>
    <%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path, class: "btn btn-lg btn-primary", id: "facebook_login" %>
    </p>

  <% end %>
</div>
